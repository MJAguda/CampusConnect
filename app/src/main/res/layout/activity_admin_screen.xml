<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutbackground"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B83B5E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headerLogo_ImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/campus_connect_logo" />

        <TextView
            android:id="@+id/headerText_TextView"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Campus Connect"
            android:textColor="#F9ED69"
            android:textSize="20sp" />
    </LinearLayout>

    <!--Body-->
    <LinearLayout
        android:id="@+id/body_LinearLayout"
        layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@drawable/round_body_bg"
        android:layout_margin="35px"
        android:padding="50px">
        <!--android:background="#F08A5D"-->

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Admin"
            android:textAlignment="center"
            android:textColor="#6A2C70"
            android:textSize="20sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/schoolId_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="School ID"
                    android:inputType="number"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>
                <EditText
                    android:id="@+id/schoolName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="School Name"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/schoolHead_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="School Head"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/adminUsername_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Admin Username"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/adminPassword_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Admin Password"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/latitudeBottom_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Latitude Bottom"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/latitudeTop_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Latitude Top"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/longitudeLeft_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Longitude Left"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/longitudeRight_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Longitude Right"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/id_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employee ID"
                    android:inputType="number"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/firstName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/lastName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:layout_margin="10px"
                    android:textColor="#6A2C70"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/round_edittext_bg"
                    android:padding="16dp"/>

                <TableLayout
                    android:id="@+id/birthday_TableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9ED69"
                        android:layout_margin="20px">

                        <Spinner
                            android:id="@+id/month_Spinner"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="30sp"
                            android:layout_margin="10px"/>

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="?android:attr/listDivider" />

                        <Spinner
                            android:id="@+id/day_Spinner"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="30sp" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="?android:attr/listDivider" />

                        <Spinner
                            android:id="@+id/year_Spinner"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="30sp" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </ScrollView>


        <!--<DatePicker
            android:id="@+id/birthday_DatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
            -->
    </LinearLayout>

    <!--Footer-->
    <LinearLayout
        android:id="@+id/footer_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B83B5E"
        android:orientation="vertical">

        <Button
            android:id="@+id/adminAddSchool_Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10px"
            android:backgroundTint="#F9ED69"
            android:text="Add School"
            android:textColor="#6A2C70"
            android:textSize="30sp" />
        <Button
            android:id="@+id/adminAddEmployee_Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10px"
            android:backgroundTint="#F9ED69"
            android:text="Add Employee"
            android:textColor="#6A2C70"
            android:textSize="30sp" />
        <Button
            android:id="@+id/submitSchool_Button"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#F9ED69"
            android:textColor="#6A2C70"
            android:text="Submit School"
            android:textSize="30sp" />
        <Button
            android:id="@+id/submitEmployee_Button"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#F9ED69"
            android:textColor="#6A2C70"
            android:text="Submit Employee"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout>