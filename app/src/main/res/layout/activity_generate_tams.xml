<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateTAMS"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0.5in"
        android:layout_height="0.5in"
        app:srcCompat="@drawable/departmentofeducationlogo"
        android:layout_gravity="center"        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Republic of the Philippines"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Department of Education"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORDILLERA ADMINISTRATIVE REGION"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCHOOLS DIVISION OF APAYAO"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FLORA NATIONAL HIGH SCHOOL"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REQUEST FOR CORRECTION/ADJUSTMENT OF BIOMETRIC TIME AND
ATTENDANCE MANAGEMENT SYSTEM (TAMS) ENTRY"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/schoolDivisionSuperintendent_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="BENEDICTA B. GAMATERO PhD"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Date"
                android:gravity="right"
                android:textSize="11sp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/date_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="School Division Superintendent"
                android:textSize="11sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/date_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Division of Apayao"
                android:textSize="11sp"/>
        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12sp" />

    <TextView
        android:id="@+id/date_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Madam:"
        android:textSize="11sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12sp" />

    <TextView
        android:id="@+id/date_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I, _________, of FLORA NATIONAL "
        android:textSize="11sp"/>
</LinearLayout>